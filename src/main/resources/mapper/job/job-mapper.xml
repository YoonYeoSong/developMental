<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="job">
  <select id="selectJobBoardList" resultType="map">
    select * from board_job
  </select>

  <select id="selectPageJobBoardList" resultType="map">
    SELECT J.*, (SELECT * COUNT(*) FROM APPLY_JOB WHERE J.NO = MEMBERNO)
     FROM BOARD_JOB J ORDER BY REGDATE DESC
  </select>

  <select id="selectJobBoardCount" resultType="_int">
    select count(*) from board_job
  </select>
</mapper>
